<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/title_layout_with_button"/>

    <LinearLayout
        android:background="@mipmap/background_splash"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_weight="85"
            android:layout_width="match_parent"
            android:layout_height="0dp">
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       app:contentPadding="5dp"
                       android:layout_margin="10dp"
                       app:cardBackgroundColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                      >
                       <LinearLayout
                           android:id="@+id/item_click"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:weightSum="100"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <LinearLayout
                               android:layout_weight="10"
                               android:layout_width="0dp"
                               android:gravity="left|center"
                               android:layout_height="match_parent">
                               <ImageView

                                   android:layout_gravity="center"
                                   android:src="@mipmap/high"
                                   android:layout_width="30dp"
                                   android:layout_height="30dp" />

                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_weight="85"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:textSize="14sp"
                                   android:text="Estimated High : $"
                                   android:textColor="#6c6c6c"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                               <EditText
                                   android:layout_marginRight="5dp"
                                   android:singleLine="true"
                                   android:id="@+id/ed_esti_high"
                                   android:textSize="13sp"

                                   android:hint="0"
                                   android:textColor="@android:color/black"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>


                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       app:contentPadding="5dp"
                       android:layout_margin="10dp"
                       app:cardBackgroundColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:weightSum="100"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <LinearLayout
                               android:layout_weight="10"
                               android:layout_width="0dp"
                               android:gravity="left|center"
                               android:layout_height="match_parent">
                               <ImageView

                                   android:layout_gravity="center"
                                   android:src="@mipmap/low"
                                   android:layout_width="30dp"
                                   android:layout_height="30dp" />

                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_weight="85"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:textSize="14sp"
                                   android:text="Estimated Low : $"
                                   android:textColor="#6c6c6c"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                               <EditText
                                   android:layout_marginRight="5dp"
                                   android:singleLine="true"
                                   android:id="@+id/ed_esti_low"
                                   android:textSize="13sp"
                                   android:hint="0"
                                   android:textColor="@android:color/black"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>




                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       app:contentPadding="5dp"
                       android:layout_margin="10dp"
                       app:cardBackgroundColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:weightSum="100"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <LinearLayout
                               android:layout_weight="10"
                               android:layout_width="0dp"
                               android:gravity="left|center"
                               android:layout_height="match_parent">
                               <ImageView

                                   android:layout_gravity="center"
                                   android:src="@mipmap/startdate"
                                   android:layout_width="30dp"
                                   android:layout_height="30dp" />

                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_weight="85"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:textSize="14sp"
                                   android:text="Start Date :"
                                   android:textColor="#6c6c6c"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                               <EditText
                                   android:editable="false"
                                   android:focusable="false"
                                   android:layout_marginRight="5dp"
                                   android:singleLine="true"
                                   android:id="@+id/ed_start_date"
                                   android:textSize="13sp"
                                   android:hint="16/Sep/2019"
                                   android:textColor="@android:color/black"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>




                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       app:contentPadding="5dp"
                       android:layout_margin="10dp"
                       app:cardBackgroundColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:weightSum="100"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <LinearLayout
                               android:layout_weight="10"
                               android:layout_width="0dp"
                               android:gravity="left|center"
                               android:layout_height="match_parent">
                               <ImageView

                                   android:layout_gravity="center"
                                   android:src="@mipmap/finishdate"
                                   android:layout_width="30dp"
                                   android:layout_height="30dp" />

                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_weight="85"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:textSize="14sp"
                                   android:text="Finish Date :"
                                   android:textColor="#6c6c6c"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                               <EditText
                                   android:editable="false"
                                   android:focusable="false"
                                   android:layout_marginRight="5dp"
                                   android:singleLine="true"
                                   android:id="@+id/ed_finish_date"
                                   android:textSize="13sp"
                                   android:hint="26/Sep/2019"
                                   android:textColor="@android:color/black"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       app:contentPadding="5dp"
                       android:layout_margin="10dp"
                       app:cardBackgroundColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:weightSum="100"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <LinearLayout
                               android:layout_weight="10"
                               android:layout_width="0dp"
                               android:gravity="left|center"
                               android:layout_height="match_parent">
                               <ImageView

                                   android:layout_gravity="center"
                                   android:src="@mipmap/assigned"
                                   android:layout_width="30dp"
                                   android:layout_height="30dp" />

                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_weight="85"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:textSize="14sp"
                                   android:text="Assigned Supervisor :"
                                   android:textColor="#6c6c6c"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                               <EditText
                                   android:focusable="false"
                                   android:editable="false"

                                   android:layout_marginRight="5dp"
                                   android:singleLine="true"
                                   android:id="@+id/ed_assigned_supervisor"
                                   android:textSize="13sp"
                                   android:hint=""
                                   android:textColor="@android:color/black"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                       </LinearLayout>


                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       app:cardCornerRadius="5dp"
                       app:contentPadding="5dp"
                       android:layout_margin="10dp"
                       app:cardBackgroundColor="@android:color/white"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:weightSum="100"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <LinearLayout
                               android:layout_weight="10"
                               android:layout_width="0dp"
                               android:gravity="left|center"
                               android:layout_height="match_parent">
                               <ImageView

                                   android:layout_gravity="center"
                                   android:src="@mipmap/assigned"
                                   android:layout_width="30dp"
                                   android:layout_height="30dp" />

                           </LinearLayout>
                           <LinearLayout
                               android:layout_marginLeft="10dp"
                               android:orientation="vertical"
                               android:layout_weight="85"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content">
                               <TextView
                                   android:textSize="14sp"
                                   android:text="Assigned Clearance Inspector :"
                                   android:textColor="#6c6c6c"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                               <EditText
                                   android:focusable="false"
                                   android:editable="false"

                                   android:layout_marginRight="5dp"
                                   android:singleLine="true"
                                   android:id="@+id/ed_assigned_inspector"
                                   android:textSize="13sp"
                                   android:layout_marginTop="2dp"
                                   android:hint=""
                                   android:textColor="@android:color/black"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />

                           </LinearLayout>

                       </LinearLayout>


                   </androidx.cardview.widget.CardView>






               </LinearLayout>
           </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_continue"
                        android:layout_margin="1dp"
                        android:background="@color/blue"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:text="Continue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>