<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_splash"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout_with_button"/>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:weightSum="3.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_completed"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout

                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@drawable/complete_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_complete_count"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text=""
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textStyle="normal"
                        android:layout_marginLeft="10dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="COMPLETED"
                        android:layout_marginTop="15dp"
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/completed"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_pending"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@drawable/pending_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_pending_count"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text=""
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="PENDING QUOTE"
                        android:layout_marginTop="15dp"
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/pending"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_working"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@drawable/working_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_working_count"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="42sp"
                        android:textColor="@android:color/white"
                        android:text=""
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:text="WORKING"
                        android:layout_marginTop="15dp"
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center|right"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/working"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>