<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/background_splash"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/title"
            layout="@layout/title_layout"/>
        <TextView
            android:layout_below="@id/title"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/main_layout"
            android:visibility="visible"
            android:layout_below="@id/title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:contentPadding="10dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto">
                    <LinearLayout
                        android:id="@+id/item_click"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:weightSum="100"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="10"
                            android:layout_width="0dp"
                            android:gravity="left|center"
                            android:layout_height="match_parent">
                            <ImageView

                                android:layout_gravity="center"
                                android:src="@mipmap/work"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_weight="90"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:singleLine="true"
                                android:id="@+id/txt_site_name"
                                android:textSize="14sp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:singleLine="true"
                                android:id="@+id/txt_site_des"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp"
                                android:text=""
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="25"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <androidx.cardview.widget.CardView
                    app:contentPaddingTop="10dp"
                    app:contentPaddingBottom="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <ImageView
                                android:src="@mipmap/location"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/txt_site_addess"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <ImageView
                                android:src="@mipmap/phone"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <TextView
                                android:id="@+id/txt_site_phone_no"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <ImageView
                                android:src="@mipmap/message"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                            <TextView
                                android:singleLine="true"
                                android:id="@+id/txt_email"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="58"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/scan_layout"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:background="@drawable/scan_in_property_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/scan_in_text"
                                android:gravity="center"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:textStyle="normal"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:text="SCAN IN TO PROPERTY"
                                android:layout_marginLeft="30dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/qr"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/notes_layout"
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:background="@drawable/view_addnotes_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:textStyle="normal"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:text="VIEW / ADD NOTES"
                                android:layout_marginLeft="30dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/project_white"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/location_layout"
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:background="@drawable/working_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:textStyle="normal"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:text="VIEW LOCAIOTN ON MAP"
                                android:layout_marginLeft="30dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/location_white"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/upload_layout"
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:background="@drawable/pending_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:textStyle="normal"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:text="UPLOAD IMAGES/VIDEO"
                                android:layout_marginLeft="30dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/upload"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/site_layout"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:background="@drawable/site_form_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:textStyle="normal"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:text="SITE FORMS"
                                android:layout_marginLeft="30dp"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/project_white"
                                android:layout_marginRight="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="35dp"
                                android:layout_height="35dp" />


                        </RelativeLayout>





                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>




</LinearLayout>